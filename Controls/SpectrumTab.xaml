<UserControl x:Class="ImagingSIMS.Controls.SpectrumTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SpectrumChart="clr-namespace:ImagingSIMS.Controls"
             xmlns:ImagePreview="clr-namespace:ImagingSIMS.Controls.SpectrumView"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             Height="Auto" Width="Auto" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <SpectrumChart:SpecChart x:Name="specChart" Grid.Column="0"/>
        <ImagePreview:ImagePreview x:Name="imagePreview" VerticalAlignment="Center" Grid.Column="1" Visibility="{Binding PreviewVisibility}" Margin="12,0,12,0"/>
    </Grid>
</UserControl>
