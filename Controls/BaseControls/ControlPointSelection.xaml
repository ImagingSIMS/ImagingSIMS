<UserControl x:Class="ImagingSIMS.Controls.BaseControls.ControlPointSelection"
             x:Name="userControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImagingSIMS.Controls.BaseControls"
             mc:Ignorable="d" 
             Width="40" Height="40">
    <Border CornerRadius="10"
            BorderThickness="2"
            DataContext="{Binding ElementName=userControl, Path=ControlPoint}"
            BorderBrush="{Binding Color}"
            Background="Transparent"
            MouseDown="Border_MouseDown"
            MouseMove="Border_MouseMove"
            MouseUp="Border_MouseUp">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{Binding Color}"
                   Text="{Binding Id}"/>
        <Border.ToolTip>
            <ToolTip>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding CoordX, StringFormat=X: {0}}"/>
                    <TextBlock Text="{Binding CoordY, StringFormat=Y: {0}}"/>
                </StackPanel>                
            </ToolTip>
        </Border.ToolTip>

    </Border>
</UserControl>
