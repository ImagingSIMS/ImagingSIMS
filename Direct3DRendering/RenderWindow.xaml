<Window x:Class="Direct3DRendering.RenderWindow"
        x:Name="userControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:Direct3DRendering"
        Title="ImagingSIMS - 3D Rendering" Height="600" Width="800"        
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Background="#FF2C2C2C"
        Loaded="Window_Loaded" Closing="Window_Closing" LostFocus="Window_LostFocus" GotFocus="Window_GotFocus"
        Activated="renderWindow_Activated" Deactivated="renderWindow_Deactivated">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Generic.xaml"/>
                <ResourceDictionary>
                    <l:BoolVisInvertedConverter x:Key="boolVisInvertedConverter"/>
                    <BooleanToVisibilityConverter x:Key="boolVisConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Style="{StaticResource MenuBarStyle}"
              Visibility="{Binding ElementName=userControl, Path=RenderWindowView.IsRenderLoaded, Converter={StaticResource boolVisConverter}}">
            <MenuItem Header="Show Render Controls" Click="menuItemShowRenderControls_Click"/>
        </Menu>
        <Grid x:Name="gridFormsHost" Grid.Row="1" >
            <WindowsFormsHost x:Name="formsHost" Margin="4"/>
        </Grid>

        <StatusBar Grid.Row="2" Visibility="{Binding ElementName=userControl, Path=RenderWindowView.IsRenderLoaded, 
            Converter={StaticResource boolVisInvertedConverter}}" Background="Transparent">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Foreground="White" Margin="4">Initializing Renderer...</TextBlock>
                <ProgressBar Width="100" Height="15" VerticalAlignment="Center" IsIndeterminate="True"/>
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
